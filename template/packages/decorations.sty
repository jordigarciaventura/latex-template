% TEXT DECORATIONS
\RequirePackage{soul}

\newcommand{\hlc}[2][hlyellow]{{\sethlcolor{#1}\hl{#2}}}
\newcommand{\ulc}[2][black]{{\setulcolor{#1}\ul{#2}}}
\newcommand{\stc}[2][black]{{\setstcolor{#1}\textst{#2}}}


